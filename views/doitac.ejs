                </ul>
            </div>
            <a class="nav-link" href="/login">Logout</a>
        </div>
    </nav>

    <div class="row">
        <div class="col-6 text-start">
            <p class="fs-2 mt-3 ms-4">Đối tác</p>
        </div>
        <div class="col-6 text-end">
            <div class="btn-group">
                <button type="button" class="btn btn-outline-secondary mt-4 me-4" data-bs-toggle="modal"
                    data-bs-target="#exampleModal">
                    Thêm đối tác
                </button>
            </div>
        </div>
    </div>

    <!-- Modal -->

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Thêm đối tác</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/doitac/add" method="post">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label>Tên</label>
                                <input type="text" name="ten" id="ten" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label>Số điện thoại</label>
                                <input type="text" name="phone" id="phone" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label>Địa chỉ</label>
                                <input type="text" name="address" id="address" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label>Email</label>
                                <input type="text" name="email" id="email" class="form-control">
                            </div>
                        </div>

                </div>
                <div class="modal-footer">
                    <div class="mb-3">
                        <input type="submit" name="submit_button" class="btn btn-primary" value=" Add">
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="detailModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Chỉnh sửa thông tin đối tác</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/doitac/chinhsua" method="post" id="updateForm">
                        <div class="form-group">
                            <label>Mã đối tác:</label>
                            <span id="manufacturerId"></span>
                        </div>
                        <div class="mb-3">
                            <label for="newName">Họ và tên</label>
                            <input type="text" name="newName" id="newName" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="newAddress">Địa chỉ</label>
                            <input type="text" name="newAddress" id="newAddress" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="newPhone">Số điện thoại</label>
                            <input type="text" name="newPhone" id="newPhone" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="newEmail">Email</label>
                            <input type="text" name="newEmail" id="newEmail" class="form-control">
                        </div>
                        <input type="hidden" name="manufacturerId" id="manufacturerIdInput" value="">
                    </form>
                </div>
                <div class="modal-footer">
                    <div class="mb-3">
                        <button type="button" class="btn btn-primary" id="updateButton">Lưu</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="grid-container">
        <div class="grid-item">
            <p class="fs-5 ms-2">Tìm đối tác</p>
            <form action="/doitac" method="post">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Số điện thoại" name="input_data2">
                    <button class="btn btn-outline-dark" type="submit">Find</button>
                </div>
                <p class="fs-5 ms-2">Tìm đối tác</p>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Tên" name="input_data1">
                    <button class="btn btn-outline-dark" type="submit">Find</button>
                </div>
            </form>
        </div>
        <div class="grid-item">
            <div class="container">
                <table id="example" class="table table-striped table-hover table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Họ và tên</th>
                            <th scope="col">Số điện thoại</th>
                            <th scope="col">Địa chỉ</th>
                            <th scope="col">Email</th>
                            <th scope="col">Sửa</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let i=0; i < dulieu.length; i++) { %>
                            <tr>
                                <td id="manufacturerId">
                                    <%= dulieu[i].manufacturer_id %>
                                </td>
                                <td>
                                    <%= dulieu[i].manufacturer_name %>
                                </td>
                                <td>
                                    <%= dulieu[i].phone %>
                                </td>
                                <td>
                                    <%= dulieu[i].address %>
                                </td>
                                <td>
                                    <%= dulieu[i].email %>
                                </td>
                                <td data-bs-toggle="modal" data-bs-target="#detailModal" class="text-center"
                                    data-manufacturerid="<%= dulieu[i].manufacturer_id %>">
                                    <img src="/img/navbar/pencil.svg">
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <script>
        // Đặt sự kiện click cho nút cập nhật đối tác khi trang được tải
        $(document).ready(function () {
            $('#updateButton').click(function () {
                // Gửi yêu cầu AJAX để cập nhật thông tin đối tác
                $.ajax({
                    type: 'POST',
                    url: '/doitac/chinhsua',
                    data: $('#updateForm').serialize(),
                    success: function (response) {
                        // Xử lý phản hồi từ server nếu cần
                        console.log(response);
                        // Đóng modal
                        $('#detailModal').modal('hide');
                        location.reload();
                    },
                    error: function (error) {
                        console.error(error);
                    }
                });
            });

            // Gán sự kiện cho modal đối tác khi nó được hiển thị
            $('#detailModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var manufacturerId = button.data('manufacturerid');
                var modal = $(this);

                // Gửi yêu cầu AJAX để lấy thông tin đối tác dựa trên manufacturerId
                $.ajax({
                    type: 'POST',
                    url: '/doitac/chinhsua/info',
                    data: { manufacturerId: manufacturerId },
                    success: function (data) {
                        console.log(data);  // Add this line

                        // Điền thông tin vào form
                        modal.find('#manufacturerId').text(data.manufacturer_id);
                        modal.find('#newName').val(data.manufacturer_name);
                        modal.find('#newAddress').val(data.address);
                        modal.find('#newPhone').val(data.phone);
                        modal.find('#newEmail').val(data.email);
                        modal.find('#manufacturerIdInput').val(data.manufacturer_id);
                    },
                    error: function (error) {
                        console.error('Error:', error);
                    }
                });
            });
        });
    </script>



